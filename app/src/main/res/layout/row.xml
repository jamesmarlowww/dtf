<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/dtf"
    android:layout_width="match_parent"
    android:id="@+id/row_background"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <ImageView
            android:id="@+id/friendsPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip" />

        <TextView
            android:id="@+id/friendsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dip"
            android:layout_marginTop="20dip"
            android:textSize="15sp"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="tickPressed"
            android:id="@+id/tick"
            android:src="@drawable/ic_done_black_36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="heartPressed"
            android:id="@+id/heart"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_favorite_black_36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="tickPressed"
            android:id="@+id/tick2"
            android:src="@drawable/ic_done_black_36dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="70dp"
            android:layout_marginEnd="70dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="heartPressed"
            android:id="@+id/heart2"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_favorite_black_36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"/>

    </RelativeLayout>

</LinearLayout>
